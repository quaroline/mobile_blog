<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/CardView.Light"
    android:id="@+id/comentario_linearlayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/comentario_rv_iv_user"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="12dp"
            android:layout_marginStart="16dp"
            android:padding="4dp"
            android:scaleType="centerCrop"
            android:background="@drawable/round_images"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.231"
            app:layout_constraintVertical_chainStyle="packed"/>

        <TextView
            android:id="@+id/comentario_rv_tv_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="16dp"
            android:text="@string/working"
            android:textAllCaps="true"
            android:fontFamily="@font/opensans_bold"
            app:layout_constraintTop_toTopOf="@+id/comentario_rv_iv_user"
            app:layout_constraintStart_toEndOf="@+id/comentario_rv_iv_user"
            app:layout_constraintEnd_toEndOf="parent" />

        <TextView
            android:id="@+id/comentario_rv_tv_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="4dp"
            android:text="@string/working"
            app:layout_constraintBottom_toBottomOf="@+id/comentario_rv_iv_user"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/comentario_rv_iv_user"
            app:layout_constraintTop_toBottomOf="@+id/comentario_rv_tv_name" />

        <TextView
            android:id="@+id/comentario_rv_tv_comment"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="24dp"
            android:layout_marginRight="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/working"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/comentario_rv_tv_title" />

        <LinearLayout
            android:id="@+id/comentario_linearlayout_nota"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="@+id/comentario_rv_tv_name"
            app:layout_constraintEnd_toEndOf="@+id/comentario_rv_tv_name"
            app:layout_constraintTop_toTopOf="@+id/comentario_rv_tv_name">

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</LinearLayout>